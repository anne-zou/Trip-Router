<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Google Map -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.notanne.otp_android_client.MapsActivity" />

    <!-- Place autocomplete fragment -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />
    </FrameLayout>

    <!-- FrameLayout to store the detailed search bar fragment -->
    <FrameLayout
        android:id="@+id/detailed_search_bar_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detailed_search_bar_height"
        android:layout_alignParentTop="true"/>

    <!-- FrameLayout to store the itinerary summary fragment -->
    <FrameLayout
        android:id="@+id/itinerary_summary_frame"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
