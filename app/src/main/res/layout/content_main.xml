<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Google Map -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.notanne.otp_android_client.MapsActivity" />

    <!-- Place autocomplete search widget -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/search_rectangle"
        android:layout_margin="8dp">
        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment" />
    </android.support.v7.widget.CardView>

    <!-- FrameLayout to store the detailed search bar fragment -->
    <FrameLayout
        android:id="@+id/detailed_search_bar_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detailed_search_bar_height"
        android:layout_alignParentTop="true"/>

    <!-- Include the floating action button-->
    <include
        layout="@layout/fab_main"/>


</RelativeLayout>
